<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.owsega.odevotional">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:description="@string/description"
        android:icon="@mipmap/my_con"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.HymnListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <!--android:label="@string/title_hymn_list"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.HymnDetailActivity"
            android:label="@string/title_hymn_detail"
            android:parentActivityName=".views.HymnListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.HymnListActivity" />
        </activity>
    </application>

</manifest>
